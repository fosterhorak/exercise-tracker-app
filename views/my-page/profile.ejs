<%- include('../partials/header') %>

<section id="my-page">
    <!-- BASIC USER INFO -->
    
    
    <h3><img class="user-avatar" src="<%= user.avatar %>" alt="" ><strong><%= user.name %></strong></h3>
    <div><strong>Email: </strong> <%= user.email %> </div>
    <br>
    <!-- EDITABLE USER INFO -->
    <div><strong>Age: </strong> <%= user.age %> </div>
    <br>
    <div><strong>Height (in): </strong> <%= user.height %> </div>
    <br>
    <div><strong>Weight (lb): </strong> <%= user.weight %> </div>
    <br>
    <div><strong>Gender: </strong> <%= user.gender %> </div>
    <br>

    <!-- Button to Edit USER INFO -->
    <button onclick="window.location.href='/my-page/edit'">Update My Info</button>
    <br>


    <!-- Display Favorite Exercises -->
    <h4>Favorite Exercises:</h2>
    <p>... list of exercises.. with link to exercise show/detail page</p>
    <br>

    <!-- Display user's most recent exercise logs -->
    <h4>My Exercise Log:</h4>
    <p> - to list logs...</p>
    <br>


</section>

  
<%- include('../partials/footer') %>