<section id="show-page">
    <!-- BASIC EXERCISE INFO -->
    <h3><strong><%= exercise.name %></strong></h3>
    <div><strong>Creator: </strong> <%= exercise.creatorName %> // (id#: <%= exercise.creatorId %>)</div>
    <br>
    <div><strong>Body Part Worked: </strong> <%= exercise.bodyPart %></div>
    <br>
    <div><strong>Description: </strong> <%= exercise.description %></div>
    <br>
