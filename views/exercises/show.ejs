    <% if (exercise.demo) { %>
        <div><a href="<%= exercise.demo %>" target="_blank"><strong>Demo Video Link</strong></a></div>
        <br>
    <% } %>
    <!-- show how popular the exercise is -->
    <div><strong>Number of favorites: </strong> <%= exercise.favoritedBy.length %></div>
